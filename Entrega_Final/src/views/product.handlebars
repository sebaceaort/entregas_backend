{{#with product}}
  <div class="container my-5">
    <div class="row">
      <h1 class="display-5 text-center mb-4">{{title}}</h1>
      <div class="col-md-5 offset-md-1">
     <img src={{thumbnails}} alt={{title}} class="img-fluid mb-2"> 
      </div>
      <div class="col-md-5">
        <h5>{{description}}</h5>
        <p class="mt-3 fs-3"><b>${{price}}</b></p>
        <p class="mt-3 fs-3"><b>Stock:</b>{{stock}} </p>
      </div>
      <button class="btn btn-success mt-5">Agregar</button>
      <button class="btn btn-primary mt-2">Comprar</button>
    </div>
  
  </div>
{{/with}}