
<div class="container my-5">
    <h1 class="text-center mb-4">Catálogo de Productos</h1>
    <div class="row" id="products">
        {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" data-product-id="{{_id}}">
                    <div class="card-body">
                        <h2 class="card-title h5">{{title}}</h2>
                        <p class="text-muted"><strong>ID:</strong> {{_id}}</p>
                        <p><strong>Descripción:</strong> {{description}}</p>
                        <p><strong>Código:</strong> {{code}}</p>
                        <p><strong>Precio:</strong> ${{price}}</p>
                        <p><strong>Status:</strong> 
                            {{#if status}}
                                <span class="badge badge-success">Disponible</span>
                            {{else}}
                                <span class="badge badge-danger">No Disponible</span>
                            {{/if}}
                        </p>
                        <p><strong>Stock:</strong> {{stock}}</p>
                        <p><strong>Categoría:</strong> {{category}}</p>
                    </div>
                    <div class="card-footer text-center">
                        {{#each thumbnail}}
                            <img src="{{this}}" alt="{{title}}" class="img-fluid mb-2" style="max-width: 200px;">
                        {{/each}}
                        <button class="btn btn-danger btn-sm mt-2 delete-btn" id="{{_id}}" >Eliminar</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>


<script src="realtime.js" type="text/javascript" ></script>
<script src="socket.io/socket.io.js"></script>
<script src="index.js"></script>