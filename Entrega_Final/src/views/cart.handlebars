<div class="container">
    <div class="text-center">
        <h1>Carrito de Compras</h1>
    </div>
{{#each products}}
<div class="row mt-3 d-flex align-items-center" id="{{product._id}}">
    <div class="col-md-2">
        {{!-- <img class="img-fluid w-100" src="./default.jpg" alt="Imagen del producto" /> --}}
    </div>

    <div class="col-md-6">
        <p class="fs-4 mb-0">{{product.description}}</p>
    </div>

    <div class="col-md-2 text-center">
        <p class="fs-4 mb-0">{{quantity}} x ${{product.price}}</p>
    </div>

    <div class="col-md-2 text-center">
        <button class="btn btn-outline-danger delete-btn" id="{{product._id}}">
            Eliminar
        </button>
    </div>
</div>
{{/each}}

</div>

<script src="/js/cart.js" type="text/javascript"></script>