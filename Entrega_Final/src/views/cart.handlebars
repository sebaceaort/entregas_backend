 {{#each products}}

<div class="row mt-3 d-flex align-items-center" id={{product._id}}>
    <div class="col-md-2">
      {{!-- <img class='img-fluid w-75' src='./default.jpg'  />      --}}        
    </div>
    <div class="col-md-6">
        <p class="fs-3">{{product.description}}</p>
    </div>
    <div class="fs-3 tex-start col-md-2">
        {{quantity}} x ${{ product.price}}
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-danger delete-btn" id={{product._id}}>
            Eliminar
        </button>
    </div>
{{/each}}
</div>


<script src="/js/cart.js" type="text/javascript"></script>